# üêâ APEX TRADING DRAGON - AWS PRODUCTION CONFIGURATION
# This .env file is optimized for 24/7 operation on AWS EC2

# ============================================================
# üõ∞Ô∏è RPC ENDPOINTS (Private Node)
# ============================================================
ARBITRUM_RPC=http://127.0.0.1:8547
ARBITRUM_WS=ws://127.0.0.1:8548
UPSTREAM_RPC=https://arb1.arbitrum.io/rpc

# ============================================================
# üîê WALLET CREDENTIALS
# ============================================================
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
PUBLIC_ADDRESS=YOUR_WALLET_ADDRESS_HERE
WALLET_ADDRESS=YOUR_WALLET_ADDRESS_HERE

# ============================================================
# üí∞ TRADING PARAMETERS
# ============================================================
TRADING_MODE=LIVE
ENABLE_PAPER_MODE=false
MIN_PROFIT_USD=0.02
MAX_POSITION_USD=15.00
MAX_GAS_GWEI=0.020

# Scan Performance (250ms = 4 scans/second)
SCAN_INTERVAL_MS=250

# ============================================================
# üéØ DEX UNIVERSE (All Enabled)
# ============================================================
ENABLE_UNISWAP_V3=true
ENABLE_SUSHISWAP=true
ENABLE_CURVE=true
ENABLE_CAMELOT_V2=true
ENABLE_CAMELOT_V3=true
ENABLE_BALANCER_V2=true
ENABLE_TRADERJOE_V2=true
ENABLE_RAMSES_V2=true
ENABLE_KYBERSWAP=true
ENABLE_FRAXSWAP=true

# ============================================================
# üß† INTELLIGENCE SYSTEMS (All Enabled)
# ============================================================
SWARM_MODE=1
AI_MODE=1
AUTO_COMPOUND=1
MAX_TRADE_PERCENT=0.25

ENABLE_MCP_INTELLIGENCE=true
ENABLE_SWARM_COORDINATOR=true
ENABLE_INTEL_INGESTOR=true

# ============================================================
# üé® APEX FEATURES (All Enabled)
# ============================================================
ENABLE_ORACLE_VALIDATION=true
ENABLE_FLASH_CRASH_DETECTOR=true
ENABLE_SMART_MONEY_TRACKER=true
ENABLE_VOLUME_SPIKE_SCANNER=true
ENABLE_WHALE_SHADOW_TRADER=true
ENABLE_STRATEGY_REVERSE_ENGINEER=true

# ============================================================
# üî≠ MEMPOOL SNIFFER
# ============================================================
MIN_MEMPOOL_VALUE=0.1
MEMPOOL_LOG=/home/ubuntu/apex/logs/mempool_feed.log

# ============================================================
# üõ°Ô∏è RISK MANAGEMENT
# ============================================================
ENABLE_PROFESSIONAL_RISK=true
MAX_DAILY_LOSS_USD=100.00
MAX_POSITION_AGE_SECONDS=300
EMERGENCY_STOP_LOSS_PERCENT=0.05

# ============================================================
# üìä LOGGING & MONITORING
# ============================================================
LOG_LEVEL=INFO
SESSION_LOG_PATH=/home/ubuntu/apex/logs/sessions
OPPORTUNITY_LEDGER=/home/ubuntu/apex/logs/opportunity_ledger.log

# ============================================================
# ‚ö° PERFORMANCE TUNING
# ============================================================
RPC_TIMEOUT=10
MAX_CONCURRENT_SCANS=4
CACHE_TTL_SECONDS=2

# ============================================================
# üîÑ AUTO-RESTART & HEALTH
# ============================================================
ENABLE_AUTO_RESTART=true
HEALTH_CHECK_INTERVAL=60
MAX_CONSECUTIVE_ERRORS=5
